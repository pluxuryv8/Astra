{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/events/approval_resolved.schema.json",
  "title": "approval_resolved",
  "type": "object",
  "properties": {
    "approval_id": {
      "type": "string"
    },
    "approval_type": {
      "type": ["string", "null"]
    },
    "step_id": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": ["approved", "rejected", "expired"]
    },
    "decision": {
      "type": ["object", "null"]
    }
  },
  "required": ["approval_id", "status", "approval_type", "step_id"],
  "additionalProperties": false
}
